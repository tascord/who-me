// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  password  String

  name     String
  username String  @unique
  banner   String?
  avatar   String
  bio      String?
  location String?
  color    String

  ring_id       String?
  ring_rotation Int

  pronouns String?
  flags    String?

  link_twitter String?
  link_github  String?
}
